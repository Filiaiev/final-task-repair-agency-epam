<?xml version="1.0" encoding="windows-1251"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <!-- Filters  -->
    
    <!-- Character encoding -->
    <filter>
        <filter-name>Character Encoding Filter</filter-name>
        <filter-class>com.filiaiev.agency.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>windows-1251</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>Character Encoding Filter</filter-name>
        <url-pattern>/WEB-INF/jsp*</url-pattern>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>Login-Register filter</filter-name>
        <filter-class>com.filiaiev.agency.filter.LoginRegisterFilter</filter-class>
<!--        <init-param>-->
<!--            <param-name>command</param-name>-->
<!--            <param-value>login</param-value>-->
<!--        </init-param>-->
    </filter>
    <filter-mapping>
        <filter-name>Login-Register filter</filter-name>
        <servlet-name>LoginServlet</servlet-name>
    </filter-mapping>
<!--    <com.filiaiev.agency.filter-mapping>-->
<!--        <com.filiaiev.agency.filter-name>Login-Register com.filiaiev.agency.filter</com.filiaiev.agency.filter-name>-->
<!--        <servlet-name>RegisterServlet</servlet-name>-->
<!--    </com.filiaiev.agency.filter-mapping>-->

    <!-- Commands access -->
    <filter>
        <filter-name>Access Filter</filter-name>
        <filter-class>com.filiaiev.agency.filter.AccessFilter</filter-class>
        
        <init-param>
            <param-name>manager</param-name>
            <param-value>setPayment setRepairer setClientCash filterBy sortOrders goToClientInfo</param-value>
        </init-param>

        <init-param>
            <param-name>repairer</param-name>
            <param-value>setStatus</param-value>
        </init-param>

        <init-param>
            <param-name>client</param-name>
            <param-value>createComment createOrder clientPay</param-value>
        </init-param>

        <init-param>
            <param-name>logged</param-name>
            <param-value>getOrderInfo getOrders</param-value>
        </init-param>

        <init-param>
            <param-name>out-of-control</param-name>
            <param-value>login logout register</param-value>
        </init-param>

<!--        <init-param>-->
<!--            <param-name>servlet-mappings</param-name>-->
<!--            <param-value>/home /login /register</param-value>-->
<!--        </init-param>-->

    </filter>
    <filter-mapping>
        <filter-name>Access Filter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>windows-1251</page-encoding>
            <default-content-type>text/html; charset=windows-1251</default-content-type>
        </jsp-property-group>
    </jsp-config>

    <welcome-file-list>
        <welcome-file>/WEB-INF/jsp/login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.filiaiev.agency.web.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.filiaiev.agency.web.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.filiaiev.agency.web.servlet.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.filiaiev.agency.web.listener.ContextListener</listener-class>
    </listener>

</web-app>